<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_image_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePatientR3"
    >

    <TextView
        android:id="@+id/register_patient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Patient"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Please enter info to create account"
        android:textColor="#717678"
        app:layout_constraintBottom_toTopOf="@+id/name_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_patient_text"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="192dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_gray"
        android:ems="10"
        android:hint=" Name"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/email_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="192dp"
        android:layout_height="39dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_gray"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/phonenumber_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/phonenumber_field"
        android:layout_width="192dp"
        android:layout_height="39dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_gray"
        android:ems="10"
        android:hint=" Phone number"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/ssn_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ssn_field"
        android:layout_width="192dp"
        android:layout_height="39dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_gray"
        android:ems="10"
        android:hint=" Social Security Number (SSN)"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/createPatientButton"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_style_filled"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:onClick="createOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>